# TorBox API Configuration
TORBOX_API_KEY=your_api_key_here

# Optional: Override API endpoints (defaults shown)
TORBOX_API_BASE=https://api.torbox.app
TORBOX_API_VERSION=v1

# Host Volume Paths (update these to match your system)
HOST_WATCH_PATH=/mnt/user/downloads/temp
HOST_DOWNLOAD_PATH=/mnt/user/downloads

# Container Base Directories (where host paths are mounted)
CONTAINER_WATCH_DIR=/app/watch
CONTAINER_DOWNLOAD_DIR=/app/downloads

# Dual Directory Mode: Subdirectory names for Radarr/Sonarr
# Setting any of these enables dual directory mode
# These are appended to CONTAINER_WATCH_DIR and CONTAINER_DOWNLOAD_DIR
RADARR_WATCH_SUBDIR=radarr
RADARR_DOWNLOAD_SUBDIR=radarr
SONARR_WATCH_SUBDIR=sonarr
SONARR_DOWNLOAD_SUBDIR=sonarr

# For single directory mode (no subdirectories), comment out all the *_SUBDIR variables above

# Timing Configuration
WATCH_INTERVAL=60
CHECK_INTERVAL=300
PROGRESS_INTERVAL=15

# Retry Configuration
MAX_RETRIES=2
MAX_STATUS_CHECK_FAILURES=5

# Download Configuration
ALLOW_ZIP=false
SEED_PREFERENCE=1
POST_PROCESSING=-1
QUEUE_IMMEDIATELY=false


