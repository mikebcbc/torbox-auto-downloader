# TorBox API Configuration
TORBOX_API_KEY=your_api_key_here

# Optional: Override API endpoints (defaults shown)
# TORBOX_API_BASE=https://api.torbox.app
# TORBOX_API_VERSION=v1

# Host Volume Paths (update these to match your system)
HOST_WATCH_PATH=/mnt/user/downloads/temp
HOST_DOWNLOAD_PATH=/mnt/user/downloads

# Container Directory Configuration
# For dual directory mode (separate Radarr/Sonarr paths):
RADARR_WATCH_DIR=/app/watch/radarr
RADARR_DOWNLOAD_DIR=/app/downloads/radarr
SONARR_WATCH_DIR=/app/watch/sonarr
SONARR_DOWNLOAD_DIR=/app/downloads/sonarr

# For single directory mode (legacy), comment out the above and use:
# WATCH_DIR=/app/watch
# DOWNLOAD_DIR=/app/downloads

# Timing Configuration
WATCH_INTERVAL=60
CHECK_INTERVAL=300
PROGRESS_INTERVAL=15

# Retry Configuration
MAX_RETRIES=2
MAX_STATUS_CHECK_FAILURES=5

# Download Configuration
ALLOW_ZIP=false
SEED_PREFERENCE=1
POST_PROCESSING=-1
QUEUE_IMMEDIATELY=false

